<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <sys:Double x:Key="SplitterWidth">3</sys:Double>
    <SolidColorBrush x:Key="SplitterBackground" Color="#FFF2F2F2"></SolidColorBrush>
    <Style x:Key="OperationButton" TargetType="Button">
        <Setter Property="Padding" Value="5,3,5,3"></Setter>
    </Style>
    <Style x:Key="DescriptionLabel" TargetType="Label">
        <Setter Property="Padding" Value="0"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
    </Style>
    <Style x:Key="CopyableText" TargetType="TextBox">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Background" Value="#fffbfbfb"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="1,2,1,2"/>
    </Style>
    <Style x:Key="IndentedLabel" TargetType="Label">
        <Setter Property="Width" Value="85"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>
</ResourceDictionary>